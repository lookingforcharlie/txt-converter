{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    // some people use: "moduleResolution": "node",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
